<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FBFBF4">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/myphoto1"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SURYASEN"
        android:layout_gravity="center"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textColor="@color/midnight_blue">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Know Me : "
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="@color/midnight_blue">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pursuing B. Tech (CSE-IT)-SRM IST || JNCAA-Cloud, Associate (JNCIA-Cloud)-Juniper Networks || SRM-IR Office-Student Chapter-PR, Photography || Indigo Squad member at Mood Indigo, IIT Bombay || CSI-CM at Aaruush, SRM IST"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👨‍💻 TECHNICAL SKILLS 👨‍💻"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/midnight_blue"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C | C++ | PYTHON | KOTLIN | ANDROID DEVELOPMENT | CLOUD COMPUTING | DATA STRUCTURES"
        android:textColor="#3A3939"
        android:textAlignment="center"
        android:textSize="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="5dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👨‍💼 NON - TECHNICAL SKILLS 👨‍💼"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/midnight_blue"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTENT WRITING | PUBLIC SPEAKING | VIDEO EDITING | LEADERSHIP | PUBLIC RELATIONS"
        android:textColor="#3A3939"
        android:textAlignment="center"
        android:textSize="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="5dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🛠️ PROJECTS 🛠️"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/midnight_blue"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Portfolio App using Kotlin "
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Ordering using C++"
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snake Game using C++ "
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RGB Rings using Python "
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe Game using Python "
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator using Python"
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banking System using C "
        android:textSize="15dp"
        android:textColor="#3A3939"
        android:textAlignment="center">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📲 CONNECT 📲"
        android:textStyle="bold"
        android:textColor="@color/midnight_blue"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/gmail"
            android:layout_margin="10dp"
            android:onClick="gmail">

        </ImageView>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/hackerrank"
            android:layout_margin="10dp"
            android:onClick="hackerrank">

        </ImageView>

        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/linkedin"
            android:layout_margin="10dp">

        </ImageView>

        <ImageView
            android:id="@+id/github"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/github"
            android:layout_margin="10dp">

        </ImageView>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/leetcode"
            android:layout_margin="10dp"
            android:onClick="leetcode">

        </ImageView>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/instagram"
            android:layout_margin="10dp"
            android:onClick="instagram">

        </ImageView>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎖️ CERTIFICATES 🎖️"
        android:textStyle="bold"
        android:textColor="@color/midnight_blue"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_margin="10dp">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/certificates"
        >

    </androidx.recyclerview.widget.RecyclerView>

    
    </LinearLayout>
</ScrollView>